<resources>

    <!-- Base application theme. -->
    <style name="LightTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:background">@color/colorTextBackground</item>
        <item name="android:textColor">@color/colorTextForeground</item>
        <item name="android:editTextBackground">@color/colorTextBackground</item>
    </style>

    <style name="LightThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:background">@color/colorTextBackground</item>
        <item name="android:textColor">@color/colorTextForeground</item>
        <item name="android:editTextBackground">@color/colorTextBackground</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="DarkTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimaryThemeDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkThemeDark</item>
        <item name="colorAccent">@color/colorAccentThemeDark</item>
        <item name="android:background">@color/colorBackgroundThemeDark</item>
        <item name="android:textColor">@color/colorTextForegroundThemeDark</item>
        <item name="android:editTextBackground">@color/colorTextBackgroundThemeDark</item>
    </style>

    <style name="DarkThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryThemeDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkThemeDark</item>
        <item name="colorAccent">@color/colorAccentThemeDark</item>
        <item name="android:background">@color/colorBackgroundThemeDark</item>
        <item name="android:textColor">@color/colorTextForegroundThemeDark</item>
        <item name="android:editTextBackground">@color/colorTextBackgroundThemeDark</item>
        <item name="android:windowActionBar">false</item>
    </style>
</resources>
